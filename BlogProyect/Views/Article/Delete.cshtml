@model Model.Domain.Article
@{
    ViewData["Title"] = "Delete";
}
<h1>¿Desea borrar este artículo?</h1>
<div>
    <br>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Body)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Body)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ArticleTypeNavigation.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ArticleTypeNavigation.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
    </dl>
    <div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5">
            <div>
                <div class="card-body">
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <p class="text-left">
                            <button class="btn btn-lg btn-danger btn-block text-uppercase" type="submit">Borrar</button>
                            <a class="btn btn-lg btn-primary btn-block text-uppercase" asp-action="Index">Volver</a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
