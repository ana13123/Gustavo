@model IEnumerable<Model.Domain.Article>
@{
    ViewData["Title"] = "IndexView";
}

<h1 align="center">Artículos</h1>
<p>
    <button class="btn btn-success" onclick="window.location.href='article/create'">
        Crear nuevo artículo
    </button>
</p>
<div class="row text-center">
    @foreach (var item in Model)
    {
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card h-100">
                <img class="card-img-top" src="http://placehold.it/500x325" alt="">
                <div class="card-body">
                    <h4 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h4>
                    <p class="card-text">@Html.DisplayFor(modelItem => item.Body)</p>
                    @Html.DisplayFor(modelItem => item.ArticleTypeNavigation.Name)<br>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </div>
                <div class="card-footer">
                    <a href="/Article/Details/@item.Id" class="btn btn-primary">Leer más...</a>
                </div>
            </div>
        </div>
    }
 
</div>